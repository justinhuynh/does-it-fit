<!DOCTYPE html>
<html>
<head>
  <title>DoesItFit</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">DoesItFit</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to 'Edit Your User Profile', edit_user_registration_path, method: :get %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>

  <div class="row">
    <div class="small-10 small-centered columns">
      <ul class="inline-list">
        <li>About</li>
        <li> | </li>
        <li>Categories</li>
        <li> | </li>
        <li>Brands</li>
        <li> | </li>
        <li>Investors</li>
        <li> | </li>
        <li>Product</li>
      </ul>
    </div>
  </div>
</body>
</html>
