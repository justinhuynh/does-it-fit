<div class = "row product-show">
  <div class="large-12 large-centered columns">
    <h2>This is the product details page</h2>
    <p>Category: <%= @product.category.name %></p>
    <p>Product: <%= @product.title %></p>
    <p>Description: <%= @product.description %></p>
    <p>Brand Name: <%= @product.brand.name %></p>
    <div class "inline-list">
      <%= link_to 'Go Back', products_path %> |
      <%= link_to 'Edit Product Info', edit_product_path(@product.id) %> |
      <%= link_to 'Delete Product', @product, method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 large-centered columns">
    <h3 class="product-show">Check out these reviews!</h3>
    <ul>
      <% count ||= 0 %>
      <% @reviews.each do |review| %>
        <li class="review">
          <% count += 1 %>
          <h4>
            Review #<%= count %>: <%= review.title %>
          </h4>
          <p>Product Fit: <%= review.product_fit %></p>
          <p><%= review.body %></p>
          <div class="votes">
            <%= render 'votes/downvote', review: review, count: count %>
          </div>
          <div class="votes">
            <%= render 'votes/upvote', review: review, count: count %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row review-form">
  <div class="large-12 large-centered columns">
    <h3>Add a review!</h3>
    <%= render 'reviews/form' %>
  </div>
</div>
