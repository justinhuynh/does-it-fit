<h4>This is the product details page</h4>
Category: <%= @product.category.name %>
  <br>
Product: <%= @product.title %>
  <br>
Description: <%= @product.description %>
  <br>
Brand Name: <%= @product.brand.name %>
<p>
  <%= link_to 'Go Back', products_path %>
</p>
<p>
  <%= link_to 'Edit Product Info', edit_product_path(@product.id) %>
</p>
<p>
  <%= link_to 'Delete Product', @product, method: :delete, data: {confirm: 'Are you sure?'} %>
</p>


<h4>Check out these reviews!</h4>
<% count ||= 0 %>
<% @reviews.each do |review| %>
  <% count += 1 %>
  Review #<%= count %>
    <br>
  Title: <%= review.title %>
    <br>
  Product Fit: <%= review.product_fit %>
    <br>
  Review: <%= review.body %>
    <p>
    <span id="vote_count_<%= count %>">213</span> <br>
    <%= image_tag("up.png", class: "up#{count}") %>
    <%= image_tag("down.png", class: "down#{count}") %><br>
<% end %>

<%= render 'reviews/form' %>
