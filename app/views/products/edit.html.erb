<h1>Edit Product!</h1>
<%= form_for @product do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :brand_id %>
  <%= f.collection_select :brand_id, Brand.all, :id, :name %>
  <!-- <%= f.text_area :brand_id %> -->
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <!-- <%= f.text_area :category_id %> -->
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Update Product", class: "button radius" %>
<% end %>
<br />
<%= link_to 'Return Home', products_path %>
