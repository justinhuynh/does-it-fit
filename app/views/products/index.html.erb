<%= @current_user  %>
<h4>This is the product page</h4>
<h5> Search for Products Below: </h5>

<% if @products.empty? %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>

  <h3> Product Index: </h3>
<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title, product %></li>
  <% end %>
</ul>
<%= link_to "Add New Product", new_product_path %>
<%= paginate @products %>
<%= page_entries_info @products %>
