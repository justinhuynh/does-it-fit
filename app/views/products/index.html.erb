
<%= @current_user  %>
<% if @products.empty? %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>

<h3>Product Index</h3>
<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title, product %></li>
  <% end %>
</ul>
<%= link_to "Add New Product", new_product_path %>
