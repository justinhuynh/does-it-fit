<h3>Categories</h3>
<ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-5">
  <% @categories.each do |category| %>
    <li>
      <%= link_to category_path(category) do %>
        <img src="<%= category.products.sample.image_url %>" >
        <center><%= category.name %></center>
      <% end %>
    </li>
  <% end %>
</ul>
